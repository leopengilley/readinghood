{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
            "setup": {
                "nixPkgs": ["...", "nodejs"]
            }
        }
    },
    "buildCommand": "npm ci"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python manage.py migrate && python manage.py collectstatic --no-input && gunicorn readinghood.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
